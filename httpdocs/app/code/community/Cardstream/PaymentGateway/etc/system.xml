<?xml version="1.0"?>
<config>
   <sections>
		<payment>
			<groups>
			   <PaymentGateway_standard translate="label" module="PaymentGateway">
					<label>Cardstream Payment Gateway</label>
					<frontend_type>text</frontend_type>
					<sort_order>3</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<active translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</active>
						<title translate="label comment">
							<label>Title</label>
							<comment>What customers will see to identify this payment method</comment>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</title>
						<IntegrationMethod translate="label">
							<label>Integration Method</label>
							<frontend_type>select</frontend_type>
							<source_model>PaymentGateway/System_Config_Source_IntegrationMethod</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</IntegrationMethod>
						<MerchantID translate="label">
							<label>Merchant ID</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</MerchantID>
						<MerchantSharedKey translate="label comment">
							<label>Merchant Shared Key</label>
							<comment>Ensure only letters and numbers are present without any whitespace or non-word characters</comment>
							<frontend_type>text</frontend_type>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</MerchantSharedKey>
						<GatewayUrl translate="label">
							<label>Gateway URL</label>
							<comment>Leave blank to use the default gateway URL this module provides</comment>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</GatewayUrl>
						<CountryCode translate="label comment">
							<label>Country Code</label>
							<comment>ISO Alpha-2, 3 or Numeric code (e.g. GB/GBR/826)</comment>
							<frontend_type>text</frontend_type>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</CountryCode>
						<CurrencyCode translate="label comment">
							<label>Currency Code</label>
							<comment>ISO 4217 Numeric or Alphabetic code (e.g. 826/GBP)</comment>
							<frontend_type>text</frontend_type>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</CurrencyCode>
						<FormResponsive translate="label">
							<label>Form Responsive</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>8</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</FormResponsive>
						<order_status translate="label">
							<label>Payment in progress status</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_order_status</source_model>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</order_status>
						<successfulpaymentstatus translate="label">
							<label>Successful payment status</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_order_status</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</successfulpaymentstatus>
						<unsuccessfulpaymentstatus translate="label">
							<label>Unsuccessful payment status</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_order_status</source_model>
							<sort_order>11</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</unsuccessfulpaymentstatus>
						<allowspecific translate="label">
							<label>Applicable Countries</label>
							<frontend_type>allowspecific</frontend_type>
							<sort_order>12</sort_order>
							<source_model>adminhtml/system_config_source_payment_allspecificcountries</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</allowspecific>
						<specificcountry translate="label">
							<label>Specific Countries</label>
							<frontend_type>multiselect</frontend_type>
							<sort_order>13</sort_order>
							<source_model>adminhtml/system_config_source_country</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</specificcountry>
						<Debug translate="label comment">
							<label>Debug</label>
							<comment>This mode is insecure and will slow performance. Intended for debugging ONLY.</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>14</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</Debug>
					</fields>
				</PaymentGateway_standard>
			</groups>
		</payment>
	</sections>
</config>
